{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es2015",
        ],
        "module": "commonjs",
        "baseUrl": "./",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@resolvers/*": ["./src/resolvers/*"],
            "@src/*": ["./src/*"],
            "@config": ["./config"],
        }
    },    
    "exclude": [
        "node_modules"
    ]
}